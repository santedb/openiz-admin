@model IEnumerable<OpenIZAdmin.Models.EntityIdentifierModels.EntityIdentifierModel>

<div class="panel panel-body">
    <div class="row">
        <div class="col-md-12">
            @if (Model.Any())
            {
                <table class="table table-striped table-bordered" id="identifiersTable">
                    <thead>
                        <tr>
                            <th></th>
                            <th>@Locale.Name</th>
                            <th>@Locale.Type</th>
                            <th>@Locale.Value</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="centerContent autoFitContents"><span class="glyphicon glyphicon-info-sign"></span></td>
                                <td>@item.Name</td>
                                <td>@item.Type</td>
                                <td>@item.Value</td>
                                <td class="autoFitContents centerContent">
                                    <a class="btn btn-warning" href="@Url.Action("Edit", "EntityIdentifier", new { id = item.Id, entityId = item.EntityId, type = item.ModelType })">
                                        @Locale.Edit
                                        <span class="glyphicon glyphicon-pencil"></span>
                                    </a>
                                    @using (Html.BeginForm("Delete", "EntityIdentifier", new {id = item.Id, entityId = item.EntityId, type = item.ModelType}, FormMethod.Post, new {@class = "inlineForm form-horizontal", role = "form"}))
                                    {

                                        <button type="submit" data-wait-text="@Locale.PleaseWait" class="btn btn-danger">
                                            @Locale.Delete
                                            <span class="glyphicon glyphicon-remove"></span>
                                        </button>
                                    }
                                </td>
                            </tr>}

                    </tbody>
                </table>}
            else
            {
                <p>@Locale.NoAssociatedIdentifiers</p>}
        </div>

    </div>
</div>